rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to users collection for authenticated users
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // Allow read/write access to clients collection for authenticated users
    match /clients/{clientId} {
      allow read, write: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Allow read/write access to client_users collection for authenticated users
    match /client_users/{docId} {
      allow read, write: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Allow read/write access to assessments collection for authenticated users
    match /assessments/{assessmentId} {
      allow read, write: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Allow initialization data seeding - temporary rule for setup
    match /{document=**} {
      allow read, write: if true;
    }
  }
}